<h1>Listing imports</h1>

<% if @imports.any? %>
  <table>
    <thead>
      <tr>
        <th>Gross Revenue</th>
        <th>Created At</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @imports.each do |import| %>
        <tr>
          <td><%= number_to_currency import.gross_revenue %></td>
          <td><%= time_ago_in_words import.created_at %></td>
          <td><%= link_to 'Show', import %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <em>No imports found.</em>
  <br>
<% end %>

<br>

<%= link_to 'New Import', new_import_path %>
